@{
    ViewBag.Title = "Pong";
}

<head>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
</head>


<script>
    
    var player = document.getElementsByClassName('player');

    $(document).ready(function () {
        $(document).keydown(function (key) {
            switch (parseInt(key.which, 10)) {
                case 38:
                    $(player).css("top", "-=10");
                    break;
                case 40:
                    $(player).css("top", "+=10");
                    break;
            }
        });
    });

  
</script>


<style>
    body {
        margin: 0px;
        height: 100%;
    }

    #arena {
        background-image: url(../../FX/Arena.png);
        background-size: 100% 100%;
        margin: 0px;
        width:100%;
        height:600px;
        overflow: hidden;
    }

    #score {
        position: absolute;
        z-index: 10000;
        left: 50%;
        top: 5%;
        transform: translate(-50%, 0%);
    }

    .player {
        z-index: 10000;
        background-image: url(../../FX/player.png);
        height:65px;
        width:10px;
    }

    .opponent{
        z-index:1000;
        background-image: url(../../FX/player.png);
        height:65px;
        width:10px;
    }
    
    .ball {
        background-image: url(../../FX/Ball.png);
    }

    #player {
        position: absolute;
        right:80%;
        
    }

    #opponent {
        position: absolute;
        left:80%
    }

    #ball {
        position: absolute;
        width: 85px;
        height: 85px;
        
    }

</style>



<div id="arena">
    <div id="score">
        <h1>
            <span id="playerScore">0</span>
            <span id="opponentScore">0</span>
        </h1>
    </div>

        <div id="player" class="player">5</div>
        <div id="opponent" class="opponent">5</div>
        <div id="ball" class="ball"></div>

        <!-- left side player controls-->
        <div id="controls-left">
            <div id="up"></div>
            <div id="down"></div>
        </div>
        <!-- right side player controls -->
        <div id="controls-right">
            <div id="left"></div>
            <div id="right"></div>
        </div>
    
</div>
